# Brevo (Sendinblue) API Key
# Obtén tu API key en: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=tu_api_key_aqui

# Supabase (ya configurado)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Sentry Error Tracking (Opcional pero recomendado para producción)
# Obtén tu DSN en: https://sentry.io/
VITE_SENTRY_DSN=

# Stripe Payment Processing
# Obtén tus keys en: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Supabase Service Key (Solo para backend/webhooks)
# CUIDADO: Esta key tiene permisos de admin, nunca exponerla en frontend
SUPABASE_SERVICE_KEY=

# Google Analytics 4 (Opcional pero recomendado)
# Obtén tu Measurement ID en: https://analytics.google.com/
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Microsoft Clarity (Opcional - Heatmaps gratuitos)
# Obtén tu Project ID en: https://clarity.microsoft.com/
VITE_CLARITY_PROJECT_ID=
